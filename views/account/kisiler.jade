extends ../layout

block content
  .page-header

  h2  Hoş Geldin Yönetici :D

  form.form-horizontal(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .ui.search
     .ui.icon.input
       input.prompt(type='text', placeholder='Search countries...')
       i.search.icon
     .results

    .form-group
     .col-sm-7

  table.ui.very.basic.table
   thead
       tr
       th Profil
       th İsim
       th Bölüm E-posta
       th Github E-posta
     tbody
     - each user in users
       tr

       td
        a(href='#{user.html_url}')
         img.ui.avatar.image(class='profile' src='#{user.profile.picture}')

       td
        a(href='#{user.html_url}')
         | #{user.profile.name}
       if user.google
       td #{user.email}

       if user.github
        td #{user.email}
       tr
